<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#13598d" />

            <stroke android:width="1dp" android:color="#777777" />

            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#0e2a50" android:startColor="#13598d" />

            <stroke android:width="1dp" android:color="#777777" />

            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape></item>

</selector>