<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#98aab9" />

            <stroke android:width="1dp" android:color="#4b4b4c" />


            <padding android:bottom="2dp" android:left="7dp" android:right="7dp" android:top="2dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#797979" android:startColor="#98aab9" />

            <stroke android:width="1dp" android:color="#343535" />
            <padding android:bottom="2dp" android:left="7dp" android:right="7dp" android:top="2dp" />
        </shape></item>

</selector>