<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#d6e9fa" />

            <stroke android:width="1dp" android:color="#282828" />


            <padding android:bottom="2dp" android:left="7dp" android:right="7dp" android:top="2dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#282828" android:startColor="#555555" />

            <stroke android:width="1dp" android:color="#282828" />
            <padding android:bottom="2dp" android:left="7dp" android:right="7dp" android:top="2dp" />
        </shape></item>

</selector>